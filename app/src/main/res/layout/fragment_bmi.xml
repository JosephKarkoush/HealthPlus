<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3d3d"
    android:orientation="vertical"
    tools:context=".BmiFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/weight_bmi"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/cardview_light_background"
            android:hint="@string/vikt"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textSize="24sp"
            android:inputType="number"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/kg_bmi"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/height_bmi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="@color/cardview_light_background"
            android:hint="@string/length_bmi"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textSize="24sp"
            android:inputType="number"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/cm_bmi"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/age_bmi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/cardview_light_background"
            android:hint="@string/age"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textSize="24sp"
            android:inputType="number"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/year_bmi"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#21a6f3"
            android:text="@string/calculate"
            android:textColor="#BBDEFB"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/healthy"
            android:importantForAccessibility="no" />
    </LinearLayout>

    <com.github.anastr.speedviewlib.SpeedView
        android:layout_marginTop="30dp"
        android:id="@+id/speedView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        app:sv_centerCircleRadius="11dp"
        app:sv_unitUnderSpeedText = "true"
        app:sv_unitSpeedInterval="15dp"
        app:sv_speedTextSize="30dp"
        app:sv_unitTextSize="20dp"
        app:sv_endDegree="360"
        app:sv_markColor="@color/material_dynamic_neutral20"
        app:sv_markStyle="ROUND"
        app:sv_maxSpeed="100"
        app:sv_minSpeed="0"
        app:sv_indicator="KiteIndicator"
        app:sv_indicatorColor="#3c3d3d"
        app:sv_speedTextFormat="INTEGER"
        app:sv_speedometerMode="TOP"
        app:sv_speedometerWidth="50dp"
        app:sv_startDegree="180"
        app:sv_tickTextFormat="INTEGER"
        app:sv_unit="BMI" />

</LinearLayout>