<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bakgrund"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FoodFragment">


    <SearchView
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:iconifiedByDefault="false"
        android:inputType="text"
        android:padding="4dp"
        android:hint="Search after product"
        android:backgroundTint="@color/cardview_light_background"
        android:background="@drawable/search_view"
        android:textColor="@color/whiteText"/>


    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="@color/cardview_light_background"
        android:id="@+id/get_food_button"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="Get Info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/cal"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:background="#3c3d3d"
                android:text="Calorie"
                android:gravity="center|top"
                android:textColor="@color/whiteText"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/fat"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:background="#3c3d3d"
                android:text="Fat"
                android:gravity="center|top"
                android:textColor="@color/whiteText"
                android:textSize="25dp" />


        </TableRow>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/carb"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:background="#3c3d3d"
                android:text="Carb."
                android:gravity="center|top"
                android:textColor="@color/whiteText"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/protin"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:background="#3c3d3d"
                android:text="Protien"
                android:gravity="center|top"
                android:textColor="@color/whiteText"
                android:textSize="25dp" />


        </TableRow>






    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rouded_corners"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/foodNames"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingStart="25dp"
            android:text="Name: \nCalories: \nSize: \nFat: \nFat Saturated: \nProtein: \nSodium: \nPotassium: \nCholesterol: \nFiber: \nSugar:"
            android:layout_height="300dp"
            android:textColor="@color/whiteText"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/foodData"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:layout_height="300dp"
            android:layout_gravity="left"
            android:textColor="@color/whiteText"
            android:textSize="20sp" />



    </LinearLayout>


</LinearLayout>